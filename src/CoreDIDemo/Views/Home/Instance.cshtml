@model CoreDIDemo.ViewModels.InstanceUsersVM

@{
    ViewData["Title"] = "Home Page";
}

<h2>All Users (Instance Repository)</h2>

<span>Random Number: @Model.RandomNumber</span>

<table>
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Username
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model.Users)
        {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @user.DateOfBirth.ToString("MM/dd/yyyy")
                </td>
                <td>
                    @user.Username
                </td>
            </tr>

        }
    </tbody>
</table>